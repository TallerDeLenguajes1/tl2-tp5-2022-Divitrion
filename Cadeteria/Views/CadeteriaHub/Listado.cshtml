@model List<Cadeteria.Models.Cadete>
@{
    ViewData["Title"] = "Listado";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Telefono</th>
            <th>Direccion</th>
            <th>CantPedidos</th>
        </tr>
    </thead>
    <tbody class="table-striped" >
        @foreach (var cadete in Model)
        {
            <tr>
                <td>@cadete.Id</td>
                <td>@cadete.Nombre</td>
                <td>@cadete.Telefono</td>
                <td>@cadete.Direccion</td>
                <td>@cadete.listadoPedidos.Count()</td>
                <td>
                    @using(Html.BeginForm("Borrar", "CadeteriaHub", FormMethod.Get))
                    {
                        <input type="hidden" name="id" value=@cadete.Id >
                        <input type="submit" value="Borrar" class="btn btn-primary">
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<section class="btn-group">
        <a href="AltaCadete" class="btn btn-primary btn-sm">AltaCadete</a>
        <a href="BajaCadete" class="btn btn-primary btn-sm">BajaCadete</a>
</section>