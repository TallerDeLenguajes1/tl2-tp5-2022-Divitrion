@model List<Cadeteria.ViewModels.CadeteViewModel>
@{
    ViewData["Title"] = "Agregar un Pedido";
    List<SelectListItem> listadoCadetes = (List<SelectListItem>)ViewBag.listadoCadetes;
}

<h1>@ViewData["Title"]</h1>

<div>
    @using(Html.BeginForm("CargaPedido", "Pedidos", FormMethod.Post))
    {
        <section class="form-group">
            <label for="Nombre">Nombre del cliente: </label>
            <input type="text" name="Nombre" class="form-control">
        </section>
        <section class="form-group">
            <label for="Telefono">Telefono del cliente: </label>
            <input type="phone" name="Telefono" class="form-control">
        </section>
        <section class="form-group">
            <label for="Direccion">Direccion del cliente: </label>
            <input type="text" name="Direccion" class="form-control">
        </section>
        <section class="form-group">
            <label for="Observacion">Observacion: </label>
            <input type="text" name="Observacion" class="form-control">
        </section>
        <div class="form-group">
            <label for="estado">Estado del Pedido: </label>
            <select class="form-control" id="estado" name="estado">
                <option value="En Curso">En Curso</option>
                <option value="Entregado">Entregado</option>
                <option value="???">???</option>
            </select>
        </div>
        <div class="form-group">
            <label for="CadeteId">Seleccione un Cadete: </label>
            @Html.DropDownList("CadeteId", listadoCadetes, "Cadete...", new { @class="form-select"})
        </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
    }
</div>