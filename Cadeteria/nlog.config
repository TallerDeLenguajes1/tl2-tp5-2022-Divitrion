<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <target xsi:type="Console" name="logConsole"/>

    <target xsi:type="File" name="logToGeneral" filename="${basedir}/logs/GeneralLogs.txt"/>
    <target xsi:type="File" name="logIn-Info" filename="${basedir}/logs/LoginInfo.txt"/>
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>

    <logger name="Microsoft.*" maxlevel="Error" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

    <logger name="*" level="Info" writeTo="logIn-Info" />

    <logger name="*" level="Error" writeTo="logToGeneral" />

<!--Output hosting lifetime messages to console target for faster startup detection -->
    <logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="logConsole" final="true" />

     <!--Skip non-critical Microsoft logs and so log only own logs (BlackHole) -->

  </rules>
</nlog>